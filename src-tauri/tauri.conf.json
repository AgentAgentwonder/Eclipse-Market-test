{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "productName": "Eclipse Market Pro",
  "version": "1.0.0",
  "identifier": "com.eclipse.market.pro",
  "bundle": {
    "active": true,
    "category": "Finance",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        "core:default",
        "shell:allow-open"
      ]
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Eclipse Market Pro",
        "width": 1400,
        "height": 900
      }
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://updates.eclipsemarketpro.com/{{target}}/{{current_version}}"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFEQ0ZFQUE5MjQ3QjQxODIKUldRMDhIanJ1SVMxM0xqdUtIaDdHaUN5M1NiQVFhOWJuRGNVRktnWVExM3VhRkdwUWZhUlVNUmkK"
    }
  }
}
